{
    admin off
    persist_config off
    auto_https off
    log {
        format json
    }
    servers {
        trusted_proxies static private_ranges 100.0.0.0/8
    }
}

:{$PORT:3000} {
    log {
        format json
    }

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    root * dist

    encode gzip
    file_server
    try_files {path} /index.html
}